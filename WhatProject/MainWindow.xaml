<Window x:Class="WhatProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WhatProject"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Title="MainWindow" Height="682.804" Width="1040.607"
        ResizeMode="NoResize"
        Foreground="White"
        Background="LightGray">
    
    
    <Grid Margin="0,0,2,0">
        <Grid x:Name="GridTheme" Height="600" Width="1000" VerticalAlignment="Bottom" HorizontalAlignment="Right">
            <DataGrid x:Name="Themes" FontSize="20" CanUserAddRows="False" Margin="0,0,10,10" AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Path=Id}" Width="55" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Name" Binding="{Binding Path=Name}" Width="150" IsReadOnly="True"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</Window>
